<?xml version="1.0" encoding="utf-8"?>

<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ask="http://schemas.android.com/apk/res-auto">
    <!-- Generic bottom row -->
    <Row
        android:keyHeight="@integer/key_normal_height"
        android:keyWidth="10%p"
        android:keyboardMode="@integer/keyboard_mode_normal"
        android:rowEdgeFlags="bottom">
        <Key
            android:codes="@integer/key_code_mode_symbols"
            android:keyEdgeFlags="left"
            android:keyWidth="15%p"
            ask:isFunctional="true"
            ask:keyDynamicEmblem="text" />

        <Key
            android:codes="@integer/key_code_mode_alphabet"
            android:keyWidth="10%p"
            ask:isFunctional="true"
            ask:keyDynamicEmblem="icon"
            ask:longPressCode="-98" />

        <Key
            android:codes="-4"
            android:keyWidth="10%p"
            ask:isFunctional="true" />

        <Key
            android:codes="@integer/key_code_space"
            android:keyWidth="30%p" />

        <Key
            android:codes="46"
            android:keyLabel="."
            android:keyWidth="10%p" />
        <Key
            android:codes="44"
            android:keyLabel=","
            android:keyWidth="10%p"
            android:popupCharacters=".!\?\u00bf\u00a1'&#34;" />

        <Key
            android:codes="@integer/key_code_enter"
            android:keyEdgeFlags="right"
            android:keyWidth="15%p"
            ask:isFunctional="true"
            ask:longPressCode="-100" />
    </Row>
    <Row
        android:keyHeight="@integer/key_normal_height"
        android:keyWidth="10%p"
        android:keyboardMode="@integer/keyboard_mode_im"
        android:rowEdgeFlags="bottom">
        <Key
            android:codes="@integer/key_code_mode_symbols"
            android:keyEdgeFlags="left"
            android:keyWidth="15%p"
            ask:isFunctional="true"
            ask:keyDynamicEmblem="text" />

        <Key
            android:codes="@integer/key_code_mode_alphabet"
            android:keyWidth="10%p"
            ask:isFunctional="true"
            ask:keyDynamicEmblem="icon"
            ask:longPressCode="-98" />

        <Key
            android:codes="@integer/key_code_quick_text"
            android:keyWidth="10%p"
            ask:isFunctional="true"
            ask:longPressCode="-102" />

        <Key
            android:codes="@integer/key_code_space"
            android:keyWidth="30%p" />

        <Key
            android:codes="46"
            android:keyLabel="."
            android:keyWidth="10%p" />
        <Key
            android:codes="44"
            android:keyLabel=","
            android:keyWidth="10%p"
            android:popupCharacters=".!\?\u00bf\u00a1'&#34;" />

        <Key
            android:codes="@integer/key_code_enter"
            android:keyEdgeFlags="right"
            android:keyWidth="15%p"
            ask:isFunctional="true"
            ask:longPressCode="-100" />
    </Row>

    <Row
        android:keyHeight="@integer/key_normal_height"
        android:keyWidth="10%p"
        android:keyboardMode="@integer/keyboard_mode_url"
        android:rowEdgeFlags="bottom">
        <Key
            android:codes="@integer/key_code_mode_symbols"
            android:keyEdgeFlags="left"
            android:keyWidth="15%p"
            ask:isFunctional="true"
            ask:keyDynamicEmblem="text" />

        <Key
            android:codes="@integer/key_code_mode_alphabet"
            android:keyWidth="10%p"
            ask:isFunctional="true"
            ask:keyDynamicEmblem="icon"
            ask:longPressCode="-98" />

        <Key
            android:codes="47"
            android:keyLabel="/"
            android:keyWidth="10%p" />

        <Key
            android:codes="@integer/key_code_space"
            android:keyWidth="25%p" />

        <Key
            android:codes="46"
            android:keyLabel="."
            android:keyWidth="10%p"
            android:popupCharacters="\?!@:,-_" />

        <Key
            android:codes="@integer/key_code_domain"
            android:keyWidth="15%p"
            ask:isFunctional="true" />

        <Key
            android:codes="@integer/key_code_enter"
            android:keyEdgeFlags="right"
            android:keyWidth="15%p"
            ask:isFunctional="true"
            ask:longPressCode="-100" />
    </Row>
    <Row
        android:keyHeight="@integer/key_normal_height"
        android:keyWidth="10%p"
        android:keyboardMode="@integer/keyboard_mode_email"
        android:rowEdgeFlags="bottom">
        <Key
            android:codes="@integer/key_code_mode_symbols"
            android:keyEdgeFlags="left"
            android:keyWidth="15%p"
            ask:isFunctional="true"
            ask:keyDynamicEmblem="text" />

        <Key
            android:codes="@integer/key_code_mode_alphabet"
            android:keyWidth="10%p"
            ask:isFunctional="true"
            ask:keyDynamicEmblem="icon"
            ask:longPressCode="-98" />

        <Key
            android:codes="64"
            android:keyLabel="\@"
            android:keyWidth="10%p" />

        <Key
            android:codes="@integer/key_code_space"
            android:keyWidth="25%p" />

        <Key
            android:codes="46"
            android:keyLabel="."
            android:keyWidth="10%p"
            android:popupCharacters="/\?!:,-_" />

        <Key
            android:codes="@integer/key_code_domain"
            android:keyWidth="15%p"
            ask:isFunctional="true" />

        <Key
            android:codes="@integer/key_code_enter"
            android:keyEdgeFlags="right"
            android:keyWidth="15%p"
            ask:isFunctional="true"
            ask:longPressCode="-100" />
    </Row>
</Keyboard>