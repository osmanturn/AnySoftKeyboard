<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/changeTheme"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="centerCrop"
            app:cardCornerRadius="0dp"
            app:layout_aspectRatio="168%"
            app:layout_widthPercent="35%" />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/AppTheme.TextApprance.List.Title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/keyboard_theme_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgCover"
            android:layout_toRightOf="@+id/imgCover" />

        <TextView
            android:id="@+id/txtDesc"
            style="@style/AppTheme.TextApprance.List.Desctiption"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_toEndOf="@+id/imgCover"
            android:layout_toRightOf="@+id/imgCover"
            android:visibility="visible" />
    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>