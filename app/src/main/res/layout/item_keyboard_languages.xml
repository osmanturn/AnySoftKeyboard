<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:id="@+id/cardLanguage"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgLanguage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="fill"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_keyboard_globe_menu" />

        <TextView
            android:id="@+id/txtTitleLanguage"
            style="@style/AppTheme.TextApprance.List.Title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/keyboards_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgLanguage"
            android:layout_toRightOf="@+id/imgLanguage" />

        <TextView
            android:id="@+id/txtDescLanguage"
            style="@style/AppTheme.TextApprance.List.Desctiption"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleLanguage"
            android:layout_toEndOf="@+id/imgLanguage"
            android:layout_toRightOf="@+id/imgLanguage"
            android:visibility="visible" />
    </RelativeLayout>

</android.support.v7.widget.CardView>