<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Ask.Menu.Item.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_user_interface_category"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_user_interface_category"
            android:text="@string/ui_group" />

        <View style="@style/Ask.Menu.Item.Title.Divider"
            android:layout_margin="0dp"/>

        <com.yek.keyboard.keyboards.views.DemoAnyKeyboardView
            android:id="@+id/idKeyboard"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/txtTheme"
            style="@style/Ask.Menu.Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/keyboard_theme_group" />

        <View style="@style/Ask.Menu.Item.Divider" />

        <TextView
            android:id="@+id/txtTopRow"
            style="@style/Ask.Menu.Item"
            android:text="@string/top_generic_row_group" />

        <View style="@style/Ask.Menu.Item.Divider" />

        <TextView
            android:id="@+id/txtButtomRow"
            style="@style/Ask.Menu.Item"
            android:text="@string/bottom_generic_row_group" />

        <View style="@style/Ask.Menu.Item.Divider" />

        <TextView
            android:id="@+id/txtEffect"
            style="@style/Ask.Menu.Item"
            android:text="@string/effects_group" />

        <View style="@style/Ask.Menu.Item.Divider" />

        <TextView
            android:id="@+id/txtInterfaceEventMore"
            style="@style/Ask.Menu.Item.More"
            android:text="@string/tweaks_group" />
    </LinearLayout>


</android.support.v7.widget.CardView>