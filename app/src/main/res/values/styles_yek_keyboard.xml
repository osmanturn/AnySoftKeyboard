<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="yekTheme" parent="@style/AnyKeyboardBaseTheme">
        <item name="android:background">@drawable/yek_keyboard_background</item>
        <item name="keyVerticalGap">@dimen/plain_theme_key_horizontal_gap</item>
        <item name="keyBackground">@drawable/lean_yek_dark_btn</item>
        <item name="keyPreviewBackground">@drawable/lean_yek_dark_popup_keyboard_background</item>
        <item name="suggestionBackgroundImage">@drawable/lean_yek_dark_candidates_background</item>
        <item name="keyboardNameTextColor">#F666</item>
        <item name="hintTextSize">0px</item>
        <item name="keyTextStyle">normal</item>
        <item name="shadowRadius">0px</item>
    </style>

    <style name="yekThemePopup" parent="@style/AnyKeyboardPopupBaseTheme">
        <item name="android:background">@drawable/lean_yek_dark_popup_keyboard_background</item>
        <item name="keyBackground">@drawable/lean_dark_btn_popup</item>
        <item name="keyTextStyle">normal</item>
        <item name="shadowRadius">0px</item>
    </style>
    <style name="yekIcon" parent="@style/AnyKeyboardBaseKeyIconTheme">
        <item name="suggestionCloseImage">@drawable/ic_av_mic_light</item>
    </style>



</resources>